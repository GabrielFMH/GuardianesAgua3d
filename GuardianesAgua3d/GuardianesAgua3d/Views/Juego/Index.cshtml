@model GuardianesAgua3d.Models.Player

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Juego 3D con Three.js</title>
    <link rel="stylesheet" href="@Url.Content("~/Source/css/estilosBase.css")" />
    <style>
        body {
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        #game-container {
            width: 100vw;
            height: 100vh;
            display: block;
        }
    </style>
</head>
<body>
    <div id="score" style="position:fixed;top:10px;left:10px;color:#0077cc;font-size:2em;z-index:10;">💧 0</div>
    <div id="trash-score" style="position:fixed;top:50px;left:10px;color:#444;font-size:1.5em;z-index:10;">🗑️ 0</div>
    <div id="game-container"></div>

    <script type="importmap">
        {
            "imports": {
                "three": "/Source/js/three.module.js",
                "three/examples/jsm/controls/OrbitControls.js": "/Source/js/OrbitControls.js",
                "three/examples/jsm/loaders/GLTFLoader.js": "/Source/js/GLTFLoader.js"
            }
        }
    </script>

    <script type="module" src="@Url.Content("~/Source/js/app.js")"></script>


</body>
</html>
